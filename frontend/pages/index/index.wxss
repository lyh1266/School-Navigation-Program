/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
}

.building-info {
  width: 100%;
  text-align: center;
  margin-top: 60rpx;
}

.building-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.building-desc {
  font-size: 28rpx;
  color: #666;
}

.logo-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.logo {
  width: 300rpx;
  height: 300rpx;
}

.navigation-btn-container {
  width: 100%;
  margin-bottom: 40rpx;
}

.voice-result {
  width: 90%;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

.voice-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.voice-tips {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.voice-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #3A7BDB;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(58, 123, 219, 0.3);
  transition: all 0.2s;
}

.voice-btn-active {
  background-color: #2C5BA7;
  transform: scale(0.95);
}

.voice-icon {
  width: 60rpx;
  height: 60rpx;
}

.voice-wake-word {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}
