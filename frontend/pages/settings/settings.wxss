/**settings.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

.user-info-section {
  background-color: #3A7BDB;
  padding: 40rpx 30rpx;
}

.user-info-content {
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
}

.user-detail {
  flex: 1;
}

.username {
  font-size: 36rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.login-btn {
  background-color: transparent;
  border: 2rpx solid #fff;
  color: #fff;
  font-size: 28rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  line-height: 1.2;
  margin: 0;
}

.settings-section {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.clear-history {
  font-size: 28rpx;
  color: #999;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 30rpx;
  color: #333;
}

.item-value {
  display: flex;
  align-items: center;
}

.item-value text {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.item-content {
  flex: 1;
  padding-left: 30rpx;
}

.picker-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  z-index: 1000;
}

.picker-item {
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
}

.favorite-list, .history-list {
  padding: 20rpx 0;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.favorite-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.favorite-item:last-child {
  border-bottom: none;
}

.favorite-info {
  flex: 1;
}

.favorite-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.favorite-desc {
  font-size: 24rpx;
  color: #999;
}

.favorite-delete {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-route {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-from, .history-to {
  font-size: 28rpx;
  color: #333;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.history-arrow {
  width: 24rpx;
  height: 24rpx;
  margin: 0 10rpx;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}
