/**destination.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
}

.location-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.location-label {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.location-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.search-container {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-box {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.voice-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #3A7BDB;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(58, 123, 219, 0.3);
}

.voice-btn-active {
  background-color: #2C5BA7;
  transform: scale(0.95);
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
}

.voice-result {
  width: 100%;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

.floor-selector {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.floor-item {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
}

.floor-item-active {
  background-color: #3A7BDB;
  color: #fff;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.room-list {
  width: 100%;
}

.room-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.room-info {
  flex: 1;
}

.room-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.room-desc {
  font-size: 24rpx;
  color: #999;
}

.room-actions {
  display: flex;
  align-items: center;
}

.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.favorite-icon {
  width: 40rpx;
  height: 40rpx;
}

.history-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.history-img {
  width: 36rpx;
  height: 36rpx;
}

.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.no-result-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.no-result-text {
  font-size: 28rpx;
  color: #999;
}
