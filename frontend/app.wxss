/**app.wxss**/
page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    'PingFang SC', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
  color: #333;
  font-size: 16px;
  line-height: 1.5;
  background-color: #f8f8f8;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 0 30rpx;
}

/* 通用按钮样式 */
.btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  color: #fff;
}

.btn-primary {
  background-color: #3A7BDB;
}

.btn-secondary {
  background-color: #5CB3CC;
}

.btn-danger {
  background-color: #E74C3C;
}

/* 卡片样式 */
.card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.card-content {
  font-size: 28rpx;
  color: #666;
}

/* 列表样式 */
.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-title {
  font-size: 30rpx;
  color: #333;
}

.list-item-desc {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 语音按钮样式 */
.voice-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #3A7BDB;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(58, 123, 219, 0.3);
}

.voice-btn-active {
  background-color: #2C5BA7;
  transform: scale(0.95);
}

.voice-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 导航指令样式 */
.navigation-instruction {
  padding: 20rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.congestion-low {
  color: #2ECC71;
}

.congestion-medium {
  color: #F39C12;
}

.congestion-high {
  color: #E74C3C;
}
